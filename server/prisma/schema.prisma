generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  Lead
  Member
}

enum RequestStatus {
  Draft
  Submitted
  Approved
  Denied
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  role      UserRole
  createdAt DateTime  @default(now())
  requests  Request[]
}

model Request {
  id          String        @id @default(uuid())
  title       String
  description String
  status      RequestStatus @default(Draft)
  requester   User          @relation(fields: [requesterId], references: [id])
  requesterId String
  createdAt   DateTime      @default(now())
}
